<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarSectorLauncher.Views.Translations.FromFileTranslationView">
    <VerticalStackLayout>
        <Label 
            Text="Il s'agit d'une version bêta du traducteur local du jeu Star Sector"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Margin="0,10"
               Text="Chemin d'accès au dossier du jeu :"/>
        <Entry x:Name="GamePathEntry"
                Margin="0,10"
                HorizontalOptions="FillAndExpand"
                Placeholder="Le chemin d'accès au dossier du jeu..." />
        <Label Margin="0,10"                   
                Text="Chemin d'accès au dossier contenant la traduction (par exemple '.../ru') :"/>
        <Entry x:Name="LocalizationPathEntry"
               Margin="0,10"
               Placeholder="Le chemin d'accès au contenant la traduction..." />

        <HorizontalStackLayout>
            <CheckBox
                x:Name="ProcessJarCheckBox"/>
            <Label
                VerticalOptions="Center"
                Text="Localiser les fichiers jar (prend plus de temps)"/>
            <CheckBox
                Margin="20,0,0,0"
                x:Name="CreatePatchFileCheckBox"/>
            <Label
                VerticalOptions="Center"
                Text="Créer un dossier avec le patch"/>
        </HorizontalStackLayout>
        <Label Margin="0,10"                   
                Text="Chemin d'accès au dossier de stockage du patch de langues (un nouveau sous-dossier sera créé) :"/>
        <Entry x:Name="PatchPathEntry"
               Margin="0,10"
               Placeholder="Le chemin d'accès au dossier racine de stockage du patch" />
        <Button Text="Commencer la traduction"
                HorizontalOptions="Start"
                Clicked="OnStartTranslateButtonClicked" />

        <Label Text="Journal :"
               Margin="0,10"/>

        <Label x:Name="LogLabel"
               Margin="0,10"/>
    </VerticalStackLayout>
</ContentView>
